---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
type Props = CollectionEntry<"blog">["data"];
const { title, description, pubDate, updatedDate, heroImage, author } =
  Astro.props;
const link = Astro.url.href;
const wap = encodeURIComponent(
  `Hey! I came across this awesome articleâš¡ - *${title}*  in BlastroðŸ”¥. Check it out here now! ${link}`
);
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={heroImage} />
    <style>
      main {
        width: calc(100% - 2em);
        max-width: 100%;
        margin: 0;
      }
      .hero-image {
        width: 90%;
        margin: auto;
      }
      .hero-image img {
        display: block;
        margin: 0 auto;
        border-radius: 3rem;
        box-shadow: var(--box-shadow);
      }
      .prose {
        width: 720px;
        max-width: calc(100% - 2em);
        margin: auto;
        color: rgb(var(--gray-dark));
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }
      .author {
        font-style: italic;
        color: #6a84acf2;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }
      .last-updated-on {
        font-style: italic;
      }
      .icon svg {
        padding: 8px;
        border-radius: 12px;
        color: white;
      }
      .link svg {
        background-color: #2d81fff2;
        cursor: pointer;
      }
      .wap svg {
        background-color: #05b849f2;
      }
      .share {
        display: flex;
        align-items: center;
        gap: 10px;
        justify-content: center;
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        <div class="hero-image">
          {
            heroImage && (
              <img width={1020} height={510} src={heroImage} alt="" />
            )
          }
        </div>
        <div class="prose">
          <div class="title">
            <div class="date">
              <FormattedDate date={pubDate} />
              {
                updatedDate && (
                  <div class="last-updated-on">
                    Last updated on <FormattedDate date={updatedDate} />
                  </div>
                )
              }
            </div>
            <h2 class="bold-title">{title}</h2>
            <h5 class="author">by {author}</h5>
            <hr />
          </div>
          <slot />
        </div>
        <div class="share">
          Share this article :
          <div class="icon link">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-copy"
              ><rect width="14" height="14" x="8" y="8" rx="2" ry="2"
              ></rect><path
                d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"
              ></path></svg
            >
          </div>
          <script>
            const tgt = document.querySelector(".link");
            if (tgt) {
              tgt.addEventListener("click", () => {
                navigator.clipboard.writeText(window.location.href);
                alert("Link copied to clipboard!");
              });
            } else {
              alert("Copy Failed ;(");
            }
          </script>
          <a
            href={`https://wa.me/?text=${wap}`}
            target="_blank"
            class="icon wap"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-phone"
              ><path
                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
              ></path></svg
            >
          </a>
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
