---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"
    ></script>
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main>
      <h1>Hello, Fellas! ðŸ‘‹</h1>
      <div class="hero">
        <img
          src="https://media3.giphy.com/media/xvRPIAtMwKQ2SlxKtx/giphy.gif?cid=ecf05e47jt2j7gpb9y5mnv8q03bbc9ui08jbojav7kbvaztu&ep=v1_gifs_search&rid=giphy.gif&ct=gp"
          alt="Hello, Fellas! ðŸ‘‹"
        />
      </div>
      <p>
        Welcome to the official Blastro blog page.This is made by <a
          href="https://bento.me/anish7">Xeven</a
        > with help of an <a href="https://astro.build/">Astro</a> template.
      </p>
      <p>You can find cool blogs here :)</p>
    </main>
    <Footer />
    <script>
      declare global {
        interface Window {
          netlifyIdentity: any;
        }
      }
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", (user: any) => {
          if (!user) {
            window.netlifyIdentity.on("login", () => {
              document.location.href = "/admin/";
            });
          }
        });
      }
    </script>
  </body>
</html>
