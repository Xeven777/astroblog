---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"
    ></script>
    <style>
      form {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        max-width: 550px;
        margin: 0 auto;
        padding: 2rem 2.5rem;
        border: 3px solid var(--accent);
        border-radius: 20px;
      }

      label {
        margin: 1rem auto 2px;
        width: 100%;
      }
      button {
        width: 100%;
        margin: 2rem;
      }
      #smalltxt{
        font-size:clamp(0.8rem,1.1vw,1.2rem);
        color: rgb(51, 51, 51);
      }
      @media (max-width: 768px) {
        form {
          max-width: 90%;
        }
      }

      @media (max-width: 480px) {
        input {
          font-size: 14px;
        }
      }
    </style>
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main>
      <h1>Submit Your Blog üßë‚ÄçüöÄ</h1>
      <form name="submission" data-netlify="true" method="POST">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required />

        <label for="subject">Subject:</label>
        <input type="text" id="subject" name="subject" />

        <label for="publishingDate">Publishing Date:</label>
        <input type="date" id="publishingDate" name="publishingDate" required />

        <label for="image">Image:</label>
        <input type="file" id="image" name="image" accept="image/*" required />

        <label for="body">Body:</label>
        <textarea id="body" name="body" rows="10" required></textarea>

        <label for="txtfile">Txt or MarkDown file:</label>
        <p id="smalltxt">(Optional. If you don't wanna write the whole blog down here, its okay. Just upload your text file and we'll take it from there üòâ)</p>
        <input type="file" id="txtfile" name="txtfile" accept=".txt,.md,.mdx" />

        <button type="submit">Submit</button>
      </form>
    </main>
    <Footer />
  </body>
</html>
